{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - {% endblock %}

{% block body %}
<div class="container">
    <h1 style="text-align: center">{{ animanga.title }}</h1>

    <h2 class="mt-5 mb-4" style="text-align: center">{{ animanga.originalTitle }}</h2>

    {{ form_start(form) }}
        <div class="my-custom-class-for-errors">
            {{ form_errors(form) }}
        </div>

        <div class="row">
            <div class="col">
                {{ form_row(form.task) }}
            </div>
        </div>

        <button>Send</button>
    {{ form_end(form) }}

    <div>
        <h2 class="mt-5" style="text-align: center">{{ animanga.type }}</h2>
        <div class="row" style="display: flex; flex-flow: row">

            <div class="col col-md-4">
                <div class="animanga-container p-3 text-center">
                    <a href="{{ animanga.image }}">
                        <img src="{{ animanga.image }}" data-src="{{ animanga.image }}" alt="Square placeholder img" >
                    </a>
                    <p class="mt-2"><strong>{{ animanga.title }}</strong></p>
                    <span>Nombre d'Ã©pisodes : {{ animanga.episodes }}</span>
                    <br>
                    <span>Genres : {{ animanga.type }}</span>
                </div>
            </div>
            <div>
                <p style="width: 65%; margin-top: 3em;">{{ animanga.synopsis }}</p>
            </div>
        </div>
    </div>

    {% for singleAvis in avis %}
           <p class="mt-2"><strong>{{ singleAvis.comment }}</strong></p>
    {% endfor %}
</div>
{% endblock %}
