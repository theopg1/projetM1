{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - {{ title }}{% endblock %}

{% block body %}
<div class="container">
    <h1>Browse {{ genre ? genre : 'All Genres' }}</h1>

    <h2 class="mt-5 mb-4">Filter by Genre</h2>
    <ul class="genre-list ps-0 mt-2 mb-3">
        <li class="d-inline">
            <a class="btn btn-primary btn-sm" href="{{ path('genreAnimanga', {
                slug:'comedy'
            }) }}">Comedy</a>
        </li>
        <li class="d-inline">
            <a class="btn btn-primary btn-sm" href="{{ path('genreAnimanga', {
                slug:'action'
            }) }}">Action</a>
        </li>
        <li class="d-inline">
            <a class="btn btn-primary btn-sm" href="{{ path('genreAnimanga', {
                slug:'drama'
            }) }}">Drama</a>
        </li>
    </ul>

    <div>
        <h2 class="mt-5">{{ title }}</h2>
        <div class="row">
            {% for animanga in animangas %}
                {% if genre is not null %}
                    {% if genre|lower in animanga.genre|lower %}
            <div class="col col-md-4" style="margin-bottom: 3em; width: 20% !important;">
                <div class="animanga-container p-3 text-center">
                    <a href="{{ path('animanga', {
                        slug: animanga.id
                    }) }}"><img class="imageListe" src="{{ animanga.image }}" data-src="{{ animanga.image }}" alt="Animanga image" >
                    </a>
                    <a href="{{ path('animanga', {
                        slug: animanga.id
                    }) }}">
                        <p class="mt-2" ><strong>{{ animanga.title }}</strong></p>
                    </a>
                    <span>Nombre d'épisodes : {{ animanga.episodes }}</span>
                    <br>
                    <span>Genres : {{ animanga.type }} </span>
                </div>
            </div>
                {% endif %}
                {% else %}
                    <div class="col col-md-4" style="margin-bottom: 3em; width: 20% !important;">
                        <div class="animanga-container p-3 text-center">
                            <a href="{{ path('animanga', {
                                slug: animanga.id
                            }) }}"><img class="imageListe" src="{{ animanga.image }}" data-src="{{ animanga.image }}" alt="Animanga image" >
                            </a>
                            <a href="{{ path('animanga', {
                                slug: animanga.id
                            }) }}">
                                <p class="mt-2" ><strong>{{ animanga.title }}</strong></p>
                            </a>
                            <span>Nombre d'épisodes : {{ animanga.episodes }}</span>
                            <br>
                            <span>Genres : {{ animanga.type }} </span>
                        </div>
                    </div>
            {% endif %}
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
